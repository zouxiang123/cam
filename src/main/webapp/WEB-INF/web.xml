    <filter>
        <filter-name>login</filter-name>
        <filter-class>com.xtt.common.filter.LoginFilter</filter-class>
        <init-param>
            <param-name>excludePath</param-name>
            <param-value>login,logout,thirddata,ws</param-value>
        </init-param>
        <init-param>
            <param-name>excludeFile</param-name>
            <param-value>.png,.gif,.jpg,.bmp,.js,.css</param-value>
        </init-param>
        <init-param>
            <param-name>needRedirect</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>HiddenHttpMethodFilter</filter-name>
        <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HiddenHttpMethodFilter</filter-name>
        <servlet-name>cam_mvc</servlet-name>
    </filter-mapping>
    <!-- filter definition -->
    <!-- webservice  -->
    <servlet>
        <servlet-name>ws</servlet-name>
        <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ws</servlet-name>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>
    <!-- servlet definition -->
    <servlet>
        <servlet-name>validator</servlet-name>
        <servlet-class>com.xtt.common.filter.Validator</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>cam_mvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath*:/config/springmvc-servlet.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>cam_mvc</servlet-name>
        <url-pattern>*.shtml</url-pattern>
    </servlet-mapping>
    <!-- servlet definition -->
    <jsp-config>
        <taglib>
            <taglib-uri>token-tag</taglib-uri>
            <taglib-location>/WEB-INF/token-tag.tld</taglib-location>
        </taglib>
    </jsp-config>
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/view/cm/error/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/view/cm/error/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/cm/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/view/cm/error/500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/view/cm/error/500.jsp</location>
    </error-page>
</web-app>